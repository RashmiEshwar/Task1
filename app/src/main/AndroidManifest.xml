<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="signup.com.loginsignup">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".NewActivity" />
        <activity android:name=".NewActivity2" />

        <provider
            android:name=".LoginContent"
            android:authorities="com.androidtutorialpoint.mycontacts"
            android:exported="true"
            android:readPermission="com.androidtutorialpoint.mycontacts.READ_DATABASE"
            android:writePermission="com.androidtutorialpoint.mycontacts.WRITE_DATABASE" />

        <activity android:name=".Screen2Activity" />
        <activity android:name=".Data_list" />
        <activity android:name=".Data_list_Activity" />
        <activity android:name=".NewContact"></activity>
    </application>

</manifest>